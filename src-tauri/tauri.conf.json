{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Wurdump",
  "version": "1.0.0",
  "identifier": "com.jerrodkim.wurdump",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Wurdump",
        "width": 450,
        "height": 600,
        "minWidth": 400,
        "minHeight": 500,
        "maxWidth": 800,
        "maxHeight": 1000,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "visible": true,
        "resizable": true,
        "closable": true,
        "minimizable": false,
        "maximizable": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    },
    "macOSPrivateApi": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "10.13",
      "exceptionDomain": ""
    }
  },
  "plugins": {
    "globalShortcut": {
      "shortcuts": []
    },
    "clipboard": {
      "readText": true,
      "writeText": true
    },
    "fs": {
      "requireLiteralLeadingDot": false
    }
  }
}
